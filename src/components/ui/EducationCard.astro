---
interface Props {
    years: string;
    degree: string;
    institution: string;
    description: string;
}

const { years, degree, institution, description } = Astro.props;
---

<div class="education-card reveal">
    <p class="education-years">{years}</p>
    <h3>{degree}</h3>
    <h4>{institution}</h4>
    <p>{description}</p>
</div>

<style>
    .education-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(13, 13, 20, 0.8) 100%);
        border: 1px solid rgba(255, 77, 0, 0.1);
        padding: 2.5rem;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .education-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 0;
        background: var(--gradient-1);
        transition: height 0.4s ease;
    }

    .education-card:hover::before {
        height: 100%;
    }

    .education-card:hover {
        transform: translateY(-5px);
        border-color: rgba(255, 77, 0, 0.3);
    }

    .education-years {
        font-size: 0.7rem;
        color: var(--primary);
        letter-spacing: 0.15em;
        margin-bottom: 1rem;
    }

    .education-card h3 {
        font-family: 'Syne', sans-serif;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .education-card h4 {
        font-size: 0.9rem;
        color: rgba(250, 250, 250, 0.5);
        font-weight: 400;
        margin-bottom: 1rem;
    }

    .education-card p:not(.education-years) {
        font-size: 0.85rem;
        color: rgba(250, 250, 250, 0.6);
        line-height: 1.7;
    }
</style>
