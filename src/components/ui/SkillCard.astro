---
interface Props {
    icon: string;
    title: string;
    description: string;
    certified?: boolean;
}

const { icon, title, description, certified = false } = Astro.props;
---

<div class="skill-card reveal">
    {certified && <span class="skill-badge">Gecertificeerd</span>}
    <div class="skill-icon">{icon}</div>
    <h3>{title}</h3>
    <p>{description}</p>
</div>

<style>
    .skill-card {
        background: linear-gradient(135deg, rgba(26, 26, 46, 0.5) 0%, rgba(13, 13, 20, 0.5) 100%);
        border: 1px solid rgba(255, 77, 0, 0.1);
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .skill-card:hover {
        border-color: var(--primary);
        transform: scale(1.02);
    }

    .skill-icon {
        width: 50px;
        height: 50px;
        background: var(--gradient-1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-family: 'Syne', sans-serif;
        font-weight: 800;
        font-size: 1.2rem;
    }

    .skill-card h3 {
        font-family: 'Syne', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .skill-card p {
        font-size: 0.8rem;
        color: rgba(250, 250, 250, 0.5);
        line-height: 1.6;
    }

    .skill-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.25rem 0.5rem;
        background: rgba(0, 212, 170, 0.1);
        border: 1px solid var(--accent);
        font-size: 0.6rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent);
    }
</style>
